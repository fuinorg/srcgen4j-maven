<?xml version="1.0" encoding="UTF-8"?>
<sg4jc:srcgen4j-config 
    xmlns:sg4jc="http://www.fuin.org/srcgen4j/commons/0.4.3" 
    xmlns:cfg="http://www.fuin.org/xmlcfg4j/0.2.1"
    xmlns:velo="http://www.fuin.org/srcgen4j/core/velocity/0.4.3">
	
	<cfg:variables>
		<cfg:variable name="templatesPath" value="${rootDir}/templates" />
	</cfg:variables>
	
	<sg4jc:projects>
		<sg4jc:project name="example" path="${rootDir}" maven="false">
			<sg4jc:folder name="srcGenFolder" path="srcGen" create="true" override="true" clean="true" />
		</sg4jc:project>
	</sg4jc:projects>
	
	<sg4jc:parsers>
		<sg4jc:parser name="parse1" class="org.fuin.srcgen4j.core.velocity.ParameterizedTemplateParser">
			<sg4jc:config>
				<velo:parameterized-template-parser modelPath="${templatesPath}" 
				                                    modelFilter=".*\.ptg\.xml"
				                                    templatePath="${templatesPath}" 
				                                    templateFilter=".*\.ptg\.java" />
			</sg4jc:config>
		</sg4jc:parser>
	</sg4jc:parsers>
	
	<sg4jc:generators>
		<sg4jc:generator name="gen1" class="org.fuin.srcgen4j.core.velocity.ParameterizedTemplateGenerator" 
		           parser="parse1" project="example">
		    <sg4jc:config>
				<velo:parameterized-template-generator templatePath="${templatesPath}" />
			</sg4jc:config>
			<sg4jc:artifact name="file" folder="srcGenFolder" />
		</sg4jc:generator>
	</sg4jc:generators>
	
</sg4jc:srcgen4j-config>
